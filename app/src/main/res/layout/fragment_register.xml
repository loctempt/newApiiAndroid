<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/userName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/usertel"
        android:layout_marginTop="139dp"
        android:ems="10"
        android:hint="请输入真实姓名"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/usertel"
        android:layout_marginTop="210dp"
        android:text="性  别"
        android:textColor="@color/textgrey"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/sexradioGroup"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/usertel"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"
        android:orientation="horizontal"
        android:textSize="15dp">

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="男"
            android:textColor="@color/textgrey" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="83dp"
            android:layout_height="wrap_content"
            android:text="女"
            android:textColor="@color/textgrey" />
    </RadioGroup>

    <EditText
        android:id="@+id/userAge"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/usertel"
        android:layout_marginTop="139dp"
        android:ems="10"
        android:hint="请输入出生年月"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/usertel"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:hint="手机号"
        android:inputType="number"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="#000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/userchecknum"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/usertel"
        android:layout_marginBottom="197dp"
        android:ems="10"
        android:hint="登录验证码"
        android:inputType="text"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="#000000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/checknumbtn"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/userchecknum"
        android:layout_alignEnd="@+id/usertel"
        android:text="获取验证码"
        android:textColor="#000000" />


    <Button
        android:id="@+id/registerbtn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:text="注册"
        android:textColor="#000000" />




</RelativeLayout>